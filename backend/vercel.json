{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "api/auth.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/$1.js"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "GOOGLE_CLIENT_ID": "@google_client_id",
    "GOOGLE_CLIENT_SECRET": "@google_client_secret",
    "FRONTEND_URL": "https://foodieshub-two.vercel.app",
    "BACKEND_URL": "https://foodieshubbackend.vercel.app"
  }
} 
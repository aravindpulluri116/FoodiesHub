{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "backend/api/auth.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
} 